      <OnLoad method="OnLoad"/>
      <OnShow method="OnShow"/>
    </Scripts>
    <Layers>
      <Layer level="BACKGROUND">
        <FontString parentKey="Money" inherits="GameFontHighlight" enableMouse="true">
          <Anchors>
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent.$parent" x="-10" y="10"/>
